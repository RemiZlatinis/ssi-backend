# ==============================================================================
# SSI BACKEND - SHARED DEVELOPMENT DEFAULTS
# ==============================================================================
# These variables are automatically loaded IF the ENVIRONMENT is NOT "production".
# ==============================================================================

# --- GENERAL ---
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=django-insecure-default-for-development

# --- NETWORK ---
HOST=localhost
ALLOWED_HOSTS=127.0.0.1,localhost
CORS_ALLOWED_ORIGINS=http://localhost:8081,http://127.0.0.1:8081
CSRF_TRUSTED_ORIGINS=http://localhost:8081

# --- DATABASE ---
# Development fallback components
SQL_DATABASE=ssi-backend
SQL_USER=user
SQL_PASSWORD=password
SQL_HOST=db
SQL_PORT=5432

# Primary connection string (matches Docker Compose defaults)
DATABASE_URL=postgresql://user:password@db:5432/ssi-backend

# --- REDIS / CHANNELS ---
REDIS_URL=redis://valkey:6379/0

# --- LOGGING ---
LOG_LEVEL=DEBUG
